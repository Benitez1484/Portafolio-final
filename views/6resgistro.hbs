        <div class="contenido">
            <!-- Título del Proyecto -->
            <h2 class="titulo-seccion">PROYECTO <span class="resaltado">REGISTRO</span></h2>
    
            <!-- Lenguajes Utilizados -->
            <div class="lenguajes-utilizados">
                <span class="lenguaje visual">VISUAL STUDIO</span>
                <span class="lenguaje c">C++</span>
